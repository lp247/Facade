---
import WithHeading from "@layouts/WithHeading.astro";
import type {MDXLayoutProps} from "astro";
import {breadCrumbs as rootBreadCrumbs} from "@pages/index.astro";

interface MDXFrontmatter {
    heading: string;
    subheading?: string;
}

const {frontmatter, url} = Astro.props as MDXLayoutProps<MDXFrontmatter>;

const breadCrumbs = [...rootBreadCrumbs, {text: frontmatter.heading, link: url}];
---

<WithHeading heading={frontmatter.heading} subheading={frontmatter.subheading} breadCrumbs={breadCrumbs}>
    <slot />
</WithHeading>
