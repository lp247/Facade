---
export interface ProjectProps {
    header: string;
    description: string;
    githubUrl?: string;
    productionUrl?: string;
    image?: string;
}

const {header, description, githubUrl, productionUrl, image} = Astro.props as ProjectProps;
---

<div id="root">
    <img src={image} />
    <div id="textcontent">
        <h2>{header}</h2>
        <p>{description}</p>
        <div id="links">
            {githubUrl && <a href={githubUrl} target="_blank">GitHub</a>}
            {productionUrl && <a href={productionUrl} target="_blank">Website</a>}
        </div>
    </div>
</div>
<style>
    #root {
        border-radius: 8px;
        border: 1px solid var(--color-accent);
        display: flex;
        flex-direction: row;
    }

    img {
        flex: 1 1 30%;
        width: 100%;
        object-fit: cover;
    }

    #textcontent {
        padding: 20px;
        display: flex;
        flex-direction: column;
        gap: 20px;
    }

    h2 {
        padding: 0;
    }

    #links {
        display: flex;
        flex-direction: row;
        align-items: center;
        justify-content: flex-start;
    }

    a {
        text-decoration: none;
        background-color: var(--color-accent);
        color: var(--color-bg);
        padding: 8px 12px;
    }
</style>