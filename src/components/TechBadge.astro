---
import {getEntry} from "astro:content";

interface Props {
    tech: string;
}

const {tech: techID} = Astro.props as Props;
const tech = await getEntry("tech", techID);
---
<a href={tech?.data.link} target="_blank" class="border-2 border-slate-600 px-3 py-1 rounded-md hover:bg-slate-600 hover:text-slate-100 text-xs font-bold text-slate-600">
    {tech?.data.name}
</a>
