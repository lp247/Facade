---
type Scope = "tech" | "project";

interface Props {
    text: string;
    scope: Scope;
    link?: string;
}

const {text, scope, link} = Astro.props as Props;
const baseStyles = "inline-block border-2 px-3 py-1 rounded-md text-xs font-bold font-sans";
const scopeStyles = {
    tech: "border-slate-600 text-slate-600 hover:bg-slate-600 hover:text-slate-100",
    project: "border-green-600 text-green-600 hover:bg-green-600 hover:text-green-100",
};
---

<a href={link} class:list={[baseStyles, scopeStyles[scope]]}>
    {text}
</a>
