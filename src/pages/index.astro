---
import Root from "@layouts/Root.astro";
import {getCollection} from "astro:content";
import mainBgImage from "@images/forestbg.jpg";
import {Image} from "astro:assets";
import TitleBar from "@components/TitleBar.astro";
const socials = await getCollection("socials");
---

<Root title="Peter Lehnhardt" class="flex flex-col items-stretch min-h-screen p-0 m-0">
    <Image loading="eager" decoding="sync" src={mainBgImage} alt="Forest" class="absolute inset-0 object-cover w-full h-full z-[-1] saturate-100" />
    <TitleBar isOnIndexPage />
    <div class="flex flex-row justify-start items-stretch p-16 h-full grow">
        <div class="flex flex-col justify-end items-start">
            <p class="font-extrabold text-xl font-sans whitespace-nowrap text-sky-100">Get in touch with me on</p>
            <div class="flex flex-row items-center justify-start justify-self-start gap-x-8 gap-y-2 mt-8 flex-wrap">
                {
                    socials.map((social) => (
                        <a href={social.data.link}>
                            <svg xmlns="http://www.w3.org/2000/svg" viewBox={social.data.svgLogo.viewBox} width="32" height="32">
                                <path class="fill-sky-100" d={social.data.svgLogo.d} />
                            </svg>
                        </a>
                    ))
                }
            </div>
        </div>
        <div class="p-16 flex flex-col items-start justify-center mx-auto max-w-5xl">
            <h1 class="text-sky-100 text-7xl font-extrabold">Hi, I am Peter</h1>
            <p class="text-3xl leading-normal font-sans text-sky-100 font-extrabold">
                I write sustainable code that solves problems without creating new ones so that we can focus on the beautiful things in life
            </p>
            <div></div>
        </div>
    </div>
</Root>
