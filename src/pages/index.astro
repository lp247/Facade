---
import Root from "@layouts/Root.astro";
import {getCollection} from "astro:content";
import forest from "@images/forest.jpg";
import {Image} from "astro:assets";
import TitleBar from "@components/TitleBar.astro";
const socials = await getCollection("socials");
---

<Root title="Peter Lehnhardt" class="h-screen pt-titlebarheight">
    <Image
        loading="lazy"
        decoding="async"
        src={forest}
        alt=""
        widths={[1920]}
        sizes="1920"
        class="absolute inset-0 object-cover w-full h-full z-[-1] saturate-100"
    />
    <TitleBar isOnIndexPage />
    <div class="flex flex-col md:flex-row-reverse justify-between md:justify-start p-7 md:p-32 h-full md:gap-10">
        <div class="flex flex-col items-start justify-center mx-auto max-w-5xl">
            <h1 class="text-sky-100 text-6xl md:text-7xl font-extrabold mt-0">Hi, I am Peter</h1>
            <p class="text-2xl md:text-3xl leading-normal font-sans text-sky-100 font-extrabold">
                I write sustainable code that solves problems without creating new ones so that we can focus on the beautiful things in life
            </p>
            <div></div>
        </div>
        <div class="flex flex-col justify-end items-start gap-5">
            <p class="font-extrabold text-xl font-sans whitespace-nowrap text-sky-100 m-0">Get in touch with me on</p>
            <div class="flex flex-row items-center justify-start justify-self-start gap-x-8 gap-y-2 m-0 flex-wrap">
                {
                    socials.map((social) => (
                        <a href={social.data.link}>
                            <svg xmlns="http://www.w3.org/2000/svg" viewBox={social.data.svgLogo.viewBox} width="32" height="32">
                                <path class="fill-sky-100" d={social.data.svgLogo.d} />
                            </svg>
                        </a>
                    ))
                }
            </div>
        </div>
    </div>
</Root>
